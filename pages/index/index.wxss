/* pages/myindex/myindex.wxss */

button{
  margin-bottom: 30rpx;
}
button:last-child{
  margin-bottom: 0;
}
.page-section-title{
  padding: 0;
}

.swiper-item{
  display: block;
  height: 150px;
}
.page-section-title{
  margin-top: 60rpx;
  position: relative;
}

.swiper_H{
  white-space: nowrap;
  width: 100%;
  /* background-color: rebeccapurple; */
}

.swiper_H swiper-item{
  /* background-color: red; */
  background-color: rgba(145,152,159,0.3);
  width: 100%;
}

.slide-image{
  width: 100%;
  height: 100%;
}
/* -------------------------- */
.page-section-spacing{
  width: 100%;
  margin: 0px;
  padding: 0px;
  /* margin-top: 0rpx; */
}
.scroll-view_H{
  /* background-color: red; */
  white-space: nowrap;
  height: 60rpx;
}
.scroll-view-item{
  height: 60rpx;
}
.scroll-view-item_H{
  display: inline-block;
  /* background-color: rgba(148,122,100,0.2); */
  margin-left: 2px;
  margin-right: 2px;
  box-shadow: 2px 2px 3px #888888;

  background-color: rgba(145,152,159,0.3);
  border-radius: 3px;
  width: 30%;
  height: 50rpx;
  font-family: serif;
  font-style: italic;
  font-size: 15px;
  color: gray;
  text-align: center;

}


/* information stream */
.information_stream_container{
  margin: 0px;
  padding: 0px;
  width: 100%;
  /* background-color: red; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-around;
}

.information_stream_item{
  margin-top: 15px;
  width: 45%;
  /* background-color: gray; */
  box-shadow: 4px 4px 5px #888888;
  /* border: dotted 1px; */
  border-radius: 5px;
  text-align: center;
   background-color: rgba(185, 136,125, 0.3);
}

.information_stream_item image{
  /* background-color: rgba(185, 136,125, 0.3); */
  width: 100%;
  top: 0px;
}